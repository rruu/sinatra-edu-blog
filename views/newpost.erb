        <form action="/new" method="post" >

        <div class="form-group floating-label-form-group controls">
            <textarea class="form-control" name="post[post_title]"  rows="1" placeholder="Title" maxlength="100"><%= @c.post_title %></textarea>
        </div>

        <div class="form-group floating-label-form-group controls">
            <textarea class="form-control" name="post[post_body]"  rows="6" placeholder="Type your post here"><%= @c.post_body %></textarea>
        </div>

        <div class="ml-auto" style="width: 155px;">
        <button type="submit" class="btn btn-primary">Create Post</button>
        </form>
        </div>